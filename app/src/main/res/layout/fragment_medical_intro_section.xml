<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.MedicalPages.MedicalIntroSectionFragment">
    <LinearLayout
        android:id="@+id/medicalIntroTopSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="20sp">
            <ImageView
                android:id="@+id/medicalIntroBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/primary_orange" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medical_basic"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/primary_orange"
                android:fontFamily="@font/archivo_bold" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary_orange"
            android:layout_marginTop="10sp"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/medicalIntroScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/medicalIntroTopSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@string/medical_title_main"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/archivo_regular"
                android:text="@string/medical_title_main_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@string/medical_water_title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_regular"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/medical_water_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@string/medical_food_title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_regular"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/medical_food_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@string/medical_plants_title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_regular"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/medical_plants_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@string/medical_animals_title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_regular"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/medical_animals_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@string/medical_personal_hygiene_title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_regular"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/medical_personal_hygiene_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@string/medical_hands_clean_title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_regular"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/medical_hands_clean_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@string/medical_hair_clean_title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_regular"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/medical_hair_clean_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@string/medical_cloth_clean_title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_regular"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/medical_cloth_clean_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@string/medical_teeth_clean_title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_regular"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/medical_teeth_clean_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@string/medical_care_feet_title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_regular"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/medical_care_feet_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@string/medical_rest_title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_regular"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/medical_rest_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@string/medical_campsite_clean_title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_regular"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/medical_campsite_clean_content" />
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/medicalIntroGoTopBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:fabSize="mini"
        android:backgroundTint="@color/primary_orange"
        android:src="@drawable/ic_baseline_vertical_align_top_24"/>

</androidx.constraintlayout.widget.ConstraintLayout>