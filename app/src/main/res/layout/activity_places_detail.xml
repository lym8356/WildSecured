<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/primary_bg"
    tools:context=".Activity.PlacesDetailActivity">
    <ImageView
        android:id="@+id/placeDetailImg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@color/black"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/placeDetailImg"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/placeDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Name"
            android:fontFamily="@font/archivo_regular"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/placeDetailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Address"
            android:layout_below="@+id/placeDetailName"
            android:fontFamily="@font/archivo_regular"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/placeDetailPhone"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Phone Number"
            android:fontFamily="@font/archivo_regular"
            android:textSize="18sp"
            android:layout_below="@+id/placeDetailAddress" />
        <TextView
            android:id="@+id/placeDetailWebsite"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Website"
            android:fontFamily="@font/archivo_regular"
            android:textSize="18sp"
            android:layout_below="@+id/placeDetailPhone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="Place Opening Hours"
            android:fontFamily="@font/archivo_regular"
            android:textSize="18sp"
            android:layout_below="@+id/placeDetailWebsite" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>