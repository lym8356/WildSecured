<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".AnimalInfoActivity"
    android:gravity="center"
    android:background="@drawable/primary_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="20sp">
            <ImageView
                android:id="@+id/animalAdviceBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/primary_orange" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/animal_main_title"
                android:textSize="18sp"
                android:layout_marginStart="70dp"
                android:textColor="@color/primary_orange"
                android:fontFamily="@font/archivo_bold" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary_orange"
            android:layout_marginTop="10sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_bold"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:text="Get a list of animal that might appear in the location you searched"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/animalGroupLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/animal_select"
            app:hintTextColor="@color/primary_orange"
            app:boxStrokeColor="@color/primary_orange"
            app:boxStrokeWidthFocused="2dp"
            android:layout_margin="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
            <AutoCompleteTextView
                android:id="@+id/animalGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/archivo_bold"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:editable="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/animalRecyclerView"
            tools:listitem="@layout/wildlife_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>
    </LinearLayout>
</LinearLayout>