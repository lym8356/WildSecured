<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/primary_bg"
    android:gravity="center"
    tools:context=".SunInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="20sp">
            <ImageView
                android:id="@+id/sunAdviceBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@color/primary_orange" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sun_main_title"
                android:textSize="24sp"
                android:layout_marginStart="40dp"
                android:textColor="@color/primary_orange"
                android:fontFamily="@font/archivo_bold" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primary_orange"
            android:layout_marginTop="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_baseline_info_21"
            app:tint="@color/primary_orange" />
        <TextView
            android:id="@+id/sunAdviceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_bold"
            android:text="@string/sun_advice_title"
            android:textAllCaps="true"
            android:layout_margin="5dp"
            android:textColor="@color/primary_orange"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/sunAdviceContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_regular"
            android:text="@string/sun_advice_content"
            android:textColor="@color/primary_orange"
            android:layout_margin="5dp"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_bold"
            android:text="@string/sun_advice_title1"
            android:textAllCaps="true"
            android:layout_margin="5dp"
            android:textColor="@color/primary_orange"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_regular"
            android:text="@string/sun_advice_content1"
            android:textColor="@color/primary_orange"
            android:layout_margin="5dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_bold"
            android:text="@string/sun_advice_title2"
            android:textAllCaps="true"
            android:layout_margin="5dp"
            android:textColor="@color/primary_orange"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_regular"
            android:text="@string/sun_advice_content2"
            android:textColor="@color/primary_orange"
            android:layout_margin="5dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_bold"
            android:text="@string/sun_advice_title3"
            android:textAllCaps="true"
            android:layout_margin="5dp"
            android:textColor="@color/primary_orange"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_regular"
            android:text="@string/sun_advice_content3"
            android:textColor="@color/primary_orange"
            android:layout_margin="5dp"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_bold"
            android:text="@string/sun_advice_title4"
            android:textAllCaps="true"
            android:layout_margin="5dp"
            android:textColor="@color/primary_orange"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_regular"
            android:text="@string/sun_advice_content4"
            android:textColor="@color/primary_orange"
            android:layout_margin="5dp"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>